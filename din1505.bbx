% Korrekte Angabe ISBN & CO
\DeclareFieldFormat{isbn}{\addcolon\space--\space\mkbibacro{ISBN}\addcolon\space #1}
\DeclareFieldFormat{isrn}{\addcolon\space--\space\mkbibacro{ISRN}\addcolon\space #1}
