\renewbibmacro*{series+number}{%
  \iffieldundef{series}
    {\iffieldundef{number}
     {}
     {\printfield[parens]{number}}}
    {\iffieldundef{number}
     {\printfield[parens]{series}}
     {\printtext[parens]{\printfield{series}%
      \setunit*{\addspace}%
      \printfield{number}}}}
  \newunit}

\newbibmacro*{stand+date}{%
  \iffieldundef{year}
      {}
      {\bibstring{stand}\usebibmacro{date}}%
}

\newbibmacro*{organization+location+stand+date}{%
  \printlist{location}%
  \iflistundef{organization}
    {\setunit*{\addcomma\space}}
    {\setunit*{\addcolon\space}}%
  \printlist{organization}%
  \setunit*{\addcomma\space\bibstring{stand}}%
  \usebibmacro{date}%
  \newunit}

\renewbibmacro*{journal+issuetitle}{%
  \usebibmacro{journal}%
  \setunit*{\addspace}%
  \iffieldundef{series}
    {}
    {\newunit
     \printfield{series}%
     \setunit{\addspace}}%
  \printfield{volume}%
  \setunit*{\addspace}%
  \usebibmacro{issue+date}
  \setunit*{\addcomma\space\bibstring{number}\space}%
  \printfield{number}%
  \setunit{\addcomma\space}%
  \printfield{eid}
  \setunit{\addcolon\space}%
  \usebibmacro{issue}%
  \newunit}

